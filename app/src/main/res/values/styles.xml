<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BottomNavTheme" parent="">
        <item name="android:background">@color/nav_background</item>
        <item name="itemIconTint">@drawable/bottom_nav_selector</item>
        <item name="itemTextColor">@drawable/bottom_nav_selector</item>
        <item name="itemRippleColor">@android:color/transparent</item>
        <item name="itemActiveIndicatorStyle">@style/CustomActiveIndicator</item>
    </style>

    <style name="CustomActiveIndicator">
        <item name="android:width">0dp</item>
        <item name="android:height">0dp</item>
        <item name="android:shape">rectangle</item>
        <item name="android:color">@android:color/transparent</item>
    </style>

</resources>