<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white"
        tools:context=".HistoriqueFragment">

        <!-- TextView en haut du fragment -->
        <TextView
            android:id="@+id/textViewTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Liste des dangers"
            android:textColor="@color/black"
            android:gravity="center"
            android:textSize="20sp"
            android:textStyle="bold"
            android:padding="16dp" />

        <!-- RecyclerView pour afficher l'historique -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewHistorique"
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_height="0dp"
            android:layout_weight="1"
        android:padding="16dp"
        android:visibility="visible" />

        <!-- Message quand il n'y a pas de danger enregistré -->
        <TextView
            android:id="@+id/aucunDangerText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Aucun danger enregistré."
            android:textColor="@color/black"
            android:gravity="center"
            android:textSize="16sp"
            android:visibility="gone" />
    </LinearLayout>
</layout>
