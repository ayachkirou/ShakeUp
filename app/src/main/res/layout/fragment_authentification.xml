<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <ScrollView
            android:id="@+id/scrollView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    app:srcCompat="@drawable/fin_lo_re" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="129dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="150dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="46dp"

                        android:text="Sign Up"
                        android:textColor="#1e1e1e"
                        android:textSize="26sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="74dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp"
                    android:text="Nom"
                    android:textColor="#1e1e1e"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/etName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="24dp"
                    android:background="@drawable/bg_edit"
                    android:ems="10"
                    android:textColor="@color/black"
                    android:hint="Enter your name"
                    android:textColorHint="@color/dark_grey"
                    android:inputType="text"
                    android:padding="12dp" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp"
                    android:text="Age"
                    android:textColor="#1e1e1e"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/etAge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="24dp"
                    android:background="@drawable/bg_edit"
                    android:ems="10"
                    android:textColor="@color/black"
                    android:hint="Enter your age"
                    android:textColorHint="@color/dark_grey"
                    android:inputType="phone"
                    android:padding="12dp" />

                <LinearLayout
                    android:layout_width="377dp"
                    android:layout_height="70dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/textView9"
                        android:layout_width="61dp"
                        android:layout_height="32dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="3dp"
                        android:layout_marginEnd="16dp"
                        android:text="Genre"
                        android:textColor="#1e1e1e"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <android.widget.RadioGroup
                        android:id="@+id/rgSexe"
                        android:layout_width="267dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:padding="10dp">

                        <android.widget.RadioButton
                            android:id="@+id/rbHomme"
                            android:layout_width="100dp"
                            android:layout_height="48dp"
                            android:text="Homme"
                            android:textColor="@color/black"
                            android:buttonTint="#236AA2"
                            />

                        <android.widget.RadioButton
                            android:id="@+id/rbFemme"
                            android:layout_width="117dp"
                            android:layout_height="48dp"
                            android:text="Femme"
                            android:textColor="@color/black"
                            android:buttonTint="#236AA2"
                            />
                    </android.widget.RadioGroup>
                </LinearLayout>

                <TextView
                    android:id="@+id/textViewi"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp"
                    android:text="Ville"
                    android:textColor="#1e1e1e"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/etVille"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="24dp"
                    android:background="@drawable/bg_edit"
                    android:ems="10"
                    android:textColor="@color/black"
                    android:hint="Enter your city"
                    android:textColorHint="@color/dark_grey"
                    android:inputType="text"
                    android:padding="12dp" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp"
                    android:text="Email"
                    android:textColor="#1e1e1e"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/etEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="24dp"
                    android:background="@drawable/bg_edit"
                    android:ems="10"
                    android:textColor="@color/black"
                    android:hint="Enter your email"
                    android:textColorHint="@color/dark_grey"
                    android:inputType="textEmailAddress"
                    android:padding="12dp" />

                <TextView
                    android:id="@+id/pho"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp"
                    android:text="Num"
                    android:textColor="#1e1e1e"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/etPhone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="24dp"
                    android:background="@drawable/bg_edit"
                    android:ems="10"
                    android:textColor="@color/black"
                    android:hint="Enter your phone number"
                    android:textColorHint="@color/dark_grey"
                    android:inputType="phone"
                    android:padding="12dp" />


                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="136dp"
                    android:layout_height="32dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp"
                    android:text="Mot de passe"
                    android:textColor="#1e1e1e"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/etPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="24dp"
                    android:background="@drawable/bg_edit"
                    android:ems="10"
                    android:hint="Enter your password"
                    android:textColorHint="@color/dark_grey"
                    android:inputType="text|textPassword"
                    android:padding="12dp"
                    android:textColor="@color/black"/>

                <Button
                    android:id="@+id/btnInscription"
                    android:layout_width="118dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginStart="42dp"
                    android:layout_marginTop="80dp"
                    android:layout_marginEnd="42dp"
                    android:layout_marginBottom="20dp"
                    android:backgroundTint="#236AA2"
                    android:padding="12dp"
                    android:text="Suivant"
                    android:textColor="@android:color/white"
                    android:textStyle="bold" />

            </LinearLayout>
        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
